<section class="saved-courses">
    <div class="container">
        <div class="aside">
            <div class="profile">
                <img src="~/images/image/profileimage.svg" alt="profile image">
                <h5>John Doe</h5>
                <p>john.doe@domain.com</p>
                <div class="sidebar">
                    <a class="btn-transparent" asp-controller="Account" asp-action="Details"><i class="fa-regular fa-gear"></i><span>Account Details</span></a>
                    <a class="btn-transparent" asp-controller="Authentication" asp-action="Security"><i class="fa-regular fa-lock"></i><span>Security</span></a>
