@using WebApi.Entities

@model IEnumerable<CourseEntity>

<section class="courses">
    <div class="container">
        <div class="content-box">
            @foreach(var course in Model)
            {
                <a class="display-course" href="#">
                    <img class="course-img" src="~/images/image/@course.ImageUrl" alt="picture of hands writing on a desktop-board">
                    <div class="badge">
                        @if (course.IsBestSeller == true)
                        {
                            <p>Best Seller</p>
                        }
                        <img class="icon" src="~/images/icons/s-btn.svg">
                    </div>
                    <div class="display-info">
                        <h5>@course.Title</h5>
                        <p>@course.Author</p>
                        <span>@course.Price</span>
                        <hr>
                        <div class="timeline-info">
                            <i class="fa-light fa-clock"></i>
                            <p>@course.Hours</p>
                            <i class="fa-light fa-thumbs-up"></i>
                            <p>@course.LikesInProcent (@course.LikesInNumbers)</p>
                        </div>
                    </div>
                </a>
            }
           
